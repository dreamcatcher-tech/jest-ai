{
  "name": "jest-ai",
  "type": "module",
  "scripts": {
    "start": "NODE_NO_WARNINGS=1 node --loader=import-jsx cli.js",
    "dev": "nodemon --no-colors --exec \"yarn start\"",
    "test": "xo && ava"
  },
  "bin": "index.js",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "ink": "^4.4.1",
    "meow": "^12.1.1",
    "openai": "^4.12.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@vdemedes/prettier-config": "^2.0.1",
    "ava": "^5.3.1",
    "chalk": "^5.3.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "import-jsx": "^5.0.0",
    "ink-testing-library": "^3.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "xo": "^0.56.0"
  },
  "ava": {
    "environmentVariables": {
      "NODE_NO_WARNINGS": "1"
    },
    "nodeArguments": [
      "--loader=import-jsx"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "prettier": true,
    "rules": {
      "react/prop-types": "off"
    },
    "semicolon": false
  },
  "prettier": {
    "semi": false
  }
}